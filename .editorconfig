root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,hpp}]
indent_size = 4

[*.rb]
indent_size = 2

[*.rkt]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.json]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.hs]
indent_size = 2

[*.nim]
indent_size = 2

[*.ll]
indent_size = 4

[*.ml{,i}]
indent_size = 2

[*.fs{,i}]
indent_size = 2
max_line_length = 80
fsharp_max_array_or_list_width = 3
fsharp_array_or_list_multiline_formatter = number_of_items
fsharp_multiline_bracket_style = aligned
fsharp_space_before_colon = true

[*.yml]
indent_size = 2
