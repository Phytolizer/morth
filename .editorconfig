root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,hpp}]
indent_size = 4

[*.rb]
indent_size = 2

[*.rkt]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.hs]
indent_size = 2

[*.nim]
indent_size = 2

